{
  "name": "@craftercms/studio",
  "private": true,
  "workspaces": [
    "ui/app",
    "ui/guest",
    "ui/legacy",
    "ui/scss",
    "ui/monaco",
    "ui/ace",
    "ui/uppy"
  ],
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "spaced-comment": [
        "error",
        "always",
        {
          "line": {
            "markers": [
              "/",
              "#"
            ]
          },
          "block": {
            "markers": [
              "!",
              "*",
              "#",
              "function",
              "const",
              "if",
              "export",
              "interface",
              "#__PURE__",
              "@__PURE__"
            ],
            "exceptions": [
              "!",
              "*",
              "#"
            ],
            "balanced": false
          }
        }
      ]
    },
    "parserOptions": {
      "ecmaVersion": 2015
    }
  },
  "resolutions": {
    "react-is": "^17.0.2",
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@mui/material": "^5.0.6"
  },
  "packageManager": "yarn@3.1.0",
  "scripts": {
    "prettier:raw": "node scripts/prettier.js",
    "prettier:all": "node scripts/prettier.js write",
    "prettier:next": "node scripts/prettier.js next",
    "prettier:legacy": "node scripts/prettier.js legacy",
    "prettier:check": "node scripts/prettier.js check-changed",
    "prettier:changed": "node scripts/prettier.js changed",
    "prettier:certify": "node scripts/prettier.js check",
    "prettier:sass": "prettier --config prettier.config.js --write 'ui/scss/**/*.scss'",
    "prettier:css": "prettier --config prettier.config.js --write 'static-assets/css/**/*.css' 'static-assets/themes/cstudioTheme/**/*.css'",
    "format-pom": "prettier --use-tabs --write pom.xml",
    "lint:ci": "eslint --ext .ts,.tsx .",
    "upgrade-yarn": "yarn set version latest"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "7.12.3",
    "@babel/runtime": "^7.15.4",
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@mui/icons-material": "^5.0.5",
    "@mui/material": "^5.0.6",
    "@reduxjs/toolkit": "^1.6.2",
    "@rollup/plugin-typescript": "^8.3.0",
    "clsx": "^1.1.1",
    "jquery": "^3.6.0",
    "js-cookie": "^3.0.1",
    "nanoid": "^3.1.30",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-scripts": "4.0.3",
    "redux": "^4.1.1",
    "redux-observable": "^2.0.0",
    "rxjs": "^7.4.0",
    "typescript": "^4.1.2",
    "uppy": "^2.2.1",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/babel__core": "^7",
    "@types/jest": "^26.0.15",
    "@types/jquery": "^3.5.8",
    "@types/js-cookie": "^3.0.0",
    "@types/node": "^16.11.3",
    "@types/prettier": "^2.4.1",
    "@types/react": "^17.0.31",
    "@types/react-dom": "^17.0.10",
    "@types/react-redux": "^7.1.20",
    "@types/rimraf": "^3",
    "build-if-changed": "^1.5.5",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "glob-gitignore": "^1.0.14",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.59.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts-treeshaking": "^1.0.2",
    "yargs": "^15.3.1"
  }
}
