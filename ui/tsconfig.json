{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strictNullChecks": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitAny": false,
    "noErrorTruncation": true,
    "noEmit": false,
    "declaration": true,
    "paths": {
      "@craftercms/studio/*": ["./app/src/*"],
      "@craftercms/models/*": ["./models/src/*"],
      "@craftercms/utils/*": ["./utils/src/*"],
      "@craftercms/services/*": ["./services/src/*"]
    }
  },
  "exclude": ["**/build"]
}
